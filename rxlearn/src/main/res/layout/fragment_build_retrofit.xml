<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llContent"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btnBasic"
        style="@style/ButtonCommon"
        android:text="1.像OkHttp一样使用"/>

    <Button
        android:id="@+id/btnTrans"
        style="@style/ButtonCommon"
        android:text="2.组装转换器"/>

    <Button
        android:id="@+id/btnAdapter"
        style="@style/ButtonCommon"
        android:text="3.组装适配器"/>

    <Button
        android:id="@+id/btnLog"
        style="@style/ButtonCommon"
        android:text="4.组装拦截器"/>

    <Button
        android:id="@+id/btnUpload"
        style="@style/ButtonCommon"
        android:text="5.组装监听器-上传"/>

    <Button
        android:id="@+id/btnDownload"
        style="@style/ButtonCommon"
        android:text="6.组装监听器-下载"/>

    <TextView
        android:id="@+id/tvShowUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
